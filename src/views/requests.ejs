<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Pending Requests</title>
  <style>
    body {
      font-family: "Segoe UI", Tahoma, sans-serif;
      background: #f4f6f9;
      margin: 0;
      padding: 0;
    }

    header {
      background: #2c3e50;
      color: white;
      padding: 15px 30px;
      font-size: 22px;
      font-weight: bold;
      box-shadow: 0 2px 6px rgba(0,0,0,0.2);
    }

    .container {
      max-width: 900px;
      margin: 30px auto;
      background: #fff;
      padding: 20px 30px;
      border-radius: 8px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    h1 {
      margin-bottom: 20px;
      font-size: 24px;
      color: #34495e;
    }

    .card {
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 15px;
      display: flex;
      align-items: center;
      gap: 20px;
      background: #fafafa;
      transition: box-shadow 0.2s ease-in-out;
    }

    .card:hover {
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    img {
      width: 100px;
      height: 100px;
      object-fit: cover;
      border-radius: 6px;
      border: 1px solid #ddd;
    }

    .details {
      flex-grow: 1;
    }

    .details p {
      margin: 4px 0;
      font-size: 14px;
      color: #555;
    }

    button {
      margin: 4px 0;
      padding: 8px 14px;
      border: none;
      cursor: pointer;
      border-radius: 4px;
      font-size: 14px;
      transition: transform 0.1s ease-in-out;
    }

    button:hover {
      transform: scale(1.05);
    }

    .accept {
      background: #27ae60;
      color: white;
    }

    .reject {
      background: #e74c3c;
      color: white;
    }

    .toast {
      position: fixed;
      top: 20px;
      right: 20px;
      background: #333;
      color: #fff;
      padding: 12px 20px;
      border-radius: 6px;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.4s ease;
    }

    .toast.show {
      opacity: 1;
      pointer-events: auto;
    }
  </style>
</head>
<body>
  <header>Admin Dashboard</header>

  <div class="container">
    <h1>Pending Requests</h1>

    <% if (requests.length === 0) { %>
      <p>No pending requests ðŸŽ‰</p>
    <% } else { %>
      <% requests.forEach(r => { %>
        <div class="card" id="req-<%= r._id %>">
          <img src="<%= r.image %>" alt="User Image" />
          <div class="details">
            <p><strong>Email:</strong> <%= r.userEmail %></p>
            <p><strong>Name:</strong> <%= r.name || "N/A" %></p>
            <p><strong>Location:</strong> <%= r.latitude %>, <%= r.longitude %></p>
            <p><strong>Status:</strong> <%= r.status %></p>
          </div>
          <div>
            <button class="accept" onclick="updateStatus('<%= r._id %>', 'accepted')">Accept</button>
            <button class="reject" onclick="updateStatus('<%= r._id %>', 'rejected')">Reject</button>
          </div>
        </div>
      <% }); %>
    <% } %>
  </div>

  <div id="toast" class="toast"></div>

  <script>
    async function updateStatus(reqid, status) {
      const res = await fetch("https://waste-management-production-a942.up.railway.app/admin/update", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ reqid, status })
      });

      const data = await res.json();

      if (res.ok) {
        document.getElementById(`req-${reqid}`).remove();
        showToast(`Request ${status}!`, status === "accepted" ? "#27ae60" : "#e74c3c");
      } else {
        showToast("Error: " + data.error, "#e74c3c");
      }
    }

    function showToast(message, color) {
      const toast = document.getElementById("toast");
      toast.textContent = message;
      toast.style.background = color;
      toast.classList.add("show");
      setTimeout(() => toast.classList.remove("show"), 3000);
    }
  </script>
</body>
</html>
